<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="50dp">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/acp_aciv_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="@dimen/dp_10"
            android:contentDescription="@string/content_description"
            android:padding="5dp"
            android:src="@drawable/back_button" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/acp_actv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/roboto_light"
            android:gravity="center"
            android:text="@string/pin_setup"
            android:textAllCaps="false"
            android:textColor="@color/txt_dark_blue"
            android:textSize="28sp" />
    </RelativeLayout>

    <View
        android:id="@+id/acp_view"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/top"
        android:background="@color/txt_light_grey" />

    <FrameLayout
        android:id="@+id/acp_fl_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top"
        android:layout_marginTop="2dp"
        android:background="@color/white" />

</RelativeLayout>