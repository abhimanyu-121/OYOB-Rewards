<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="50dp"
        tools:context="com.pegasusgroup.atWorkRewards.activity.ActivityDashboard">

        <TextView
            android:id="@+id/al_tv_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/roboto_light"
            android:gravity="center"
            android:visibility="gone"
            android:text="@string/activate"
            android:textAllCaps="false"
            android:textColor="@color/txt_dark_blue"
            android:textSize="28sp" />

        <View
            android:id="@+id/acp_view"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:visibility="gone"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/al_tv_login" />

        <TextView
            android:id="@+id/al_tv_insertpin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/roboto_light"
            android:gravity="center"
            android:text="@string/insert_your_pin"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/txt_dark_blue" />

        <include
            android:id="@+id/editText"
            layout="@layout/otp_reader_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <TextView
            android:id="@+id/insertpin1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:gravity="center"
            android:text="@string/confirm_your_pin"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/txt_dark_blue" />

        <include
            android:id="@+id/editText1"
            layout="@layout/otp_reader_view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <Button
            android:id="@+id/pinActivateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_blue"
            android:fontFamily="@font/avenir_roman"
            android:gravity="center"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:text="@string/activate"
            android:textAllCaps="false"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/white" />
    </LinearLayout>
</ScrollView>