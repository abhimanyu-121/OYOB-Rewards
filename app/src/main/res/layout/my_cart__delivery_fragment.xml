<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_pager_change_two"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="40dp"
            android:visibility="visible">

            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/txt_light_grey"
                android:fontFamily="@font/roboto_light"
                android:gravity="center"
                android:hint="Email *"
                android:imeActionLabel="Next"
                android:imeOptions="actionNext"
                android:inputType="textWebEmailAddress"
                android:maxLines="1"
                android:textColor="@color/txt_dark_blue"
                android:textColorHint="@color/txt_light_grey" />

            <EditText
                android:id="@+id/edt_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/txt_light_grey"
                android:fontFamily="@font/roboto_light"
                android:gravity="center"
                android:hint="Mobile *"
                android:imeActionLabel="Next"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@color/txt_dark_blue"
                android:textColorHint="@color/txt_light_grey" />

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/txt_light_grey"
                android:ems="10"
                android:fontFamily="@font/roboto_light"
                android:gravity="center"
                android:hint="Address1 *"
                android:imeActionLabel="Next"
                android:imeOptions="actionNext"
                android:textColor="@color/txt_dark_blue"
                android:textColorHint="@color/txt_light_grey" />

            <EditText
                android:id="@+id/edt_address2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/txt_light_grey"
                android:fontFamily="@font/roboto_light"
                android:gravity="center"
                android:hint="Address2"
                android:imeActionLabel="Next"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:textColor="@color/txt_dark_blue"
                android:textColorHint="@color/txt_light_grey" />

            <EditText
                android:id="@+id/edt_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/txt_light_grey"
                android:fontFamily="@font/roboto_light"
                android:gravity="center"
                android:hint="Country *"
                android:imeActionLabel="Next"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:textColor="@color/txt_dark_blue"
                android:textColorHint="@color/txt_light_grey" />

            <EditText
                android:id="@+id/edt_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/txt_light_grey"
                android:fontFamily="@font/roboto_light"
                android:gravity="center"
                android:hint="State *"
                android:imeActionLabel="Next"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:textColor="@color/txt_dark_blue"
                android:textColorHint="@color/txt_light_grey" />

            <EditText
                android:id="@+id/edt_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/txt_light_grey"
                android:fontFamily="@font/roboto_light"
                android:gravity="center"
                android:hint="City *"
                android:imeActionLabel="Next"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:textColor="@color/txt_dark_blue"
                android:textColorHint="@color/txt_light_grey" />

            <EditText
                android:id="@+id/edt_pincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/txt_light_grey"
                android:fontFamily="@font/roboto_light"
                android:gravity="center"
                android:hint="Pincode *"
                android:imeActionLabel="Next"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:textColor="@color/txt_dark_blue"
                android:textColorHint="@color/txt_light_grey" />

            <Button
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/bg_button_blue"
                android:fontFamily="@font/avenir_roman"
                android:paddingLeft="70dp"
                android:paddingRight="70dp"
                android:text="Next"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>