<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="5dp">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/aa_aciv_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="@dimen/dp_10"
            android:contentDescription="@string/content_description"
            android:padding="5dp"
            android:src="@drawable/back_button" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/aa_actv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/roboto_light"
            android:gravity="center"
            android:text="@string/tt"
            android:textAllCaps="false"
            android:textColor="@color/txt_dark_blue"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:id="@+id/acp_view"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/top"
        android:background="@color/txt_light_grey" />

    <WebView
        android:id="@+id/webViewTerms"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/acp_view"
        android:layout_marginTop="@dimen/dp_5"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/acp_view"
        android:clipToPadding="false"
        android:padding="10dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/terms_us_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:fontFamily="@font/roboto_light"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/terms_us_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:fontFamily="@font/roboto_light"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/terms_us_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/terms_us_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:fontFamily="@font/roboto_light"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/terms_us_five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/terms_us_six"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:fontFamily="@font/roboto_light"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/terms_us_seven"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:fontFamily="@font/roboto_light"
                android:gravity="center_horizontal"
                android:text="@string/communicating_with_you_by_email"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/terms_us_eight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:fontFamily="@font/roboto_light"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/terms_us_nine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>