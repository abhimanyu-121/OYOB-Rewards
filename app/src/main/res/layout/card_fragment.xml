<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/card_iv_image"
                android:layout_width="400dp"
                android:layout_height="200dp"
                android:layout_margin="5dp"
                android:contentDescription="@string/content_description"
                android:rotation="90" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card_tv_member_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:padding="10dp"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/txt_dark_blue"
                tools:text="" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black" />

            <TextView
                android:id="@+id/member_ship_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:padding="10dp"
                android:text="Membership Number"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/txt_light_grey" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:background="@color/txt_light_grey" />

            <TextView
                android:id="@+id/card_tv_membership_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:paddingTop="10dp"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/txt_light_grey"
                tools:text="677876" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>