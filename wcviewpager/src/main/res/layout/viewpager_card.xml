<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <com.darwindeveloper.wcviewpager.WrapContentViewPager
        android:id="@+id/wrap_content_viewpager_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerviewIndicators_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp"
        android:gravity="center"
        android:text="NAME"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="italic" />

    <View
        android:id="@+id/cab1"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/textView_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cab1"
        android:layout_marginTop="19dp"
        android:layout_gravity="center"
        android:text="CARD"
        android:textColor="@android:color/holo_blue_dark" />

    <View
        android:id="@+id/cab2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="20dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/textView_postcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:gravity="center"
        android:text="123456"
        android:textColor="@android:color/holo_blue_dark" />


</LinearLayout>